{
  "name": "gridsome-plugin-ts",
  "version": "0.0.2",
  "description": "TypeScript plugin for Gridsome.",
  "main": "index.js",
  "typings": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf index.js index.d.ts",
    "build": "tsc",
    "format": "prettier --write \"*.{js,json}\"",
    "lint": "tslint -p .",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluons/gridsome-plugin-ts.git"
  },
  "keywords": [
    "typescript",
    "ts",
    "gridsome",
    "gridsome-plugin"
  ],
  "author": "Saran Tanpituckpong <sarunta@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gluons/gridsome-plugin-ts/issues"
  },
  "homepage": "https://github.com/gluons/gridsome-plugin-ts",
  "peerDependencies": {
    "gridsome": "*",
    "typescript": "*"
  },
  "dependencies": {
    "ts-loader": "^8.0.0"
  },
  "devDependencies": {
    "@gluons/prettier-config": "^2.0.0",
    "@types/node": "^8.3",
    "@types/webpack": "^4.4.25",
    "prettier": "^2.0.0",
    "rimraf": "^3.0.0",
    "tsconfig-gluons": "^1.0.1",
    "tslint": "^5.14.0",
    "tslint-config-gluons": "^2.1.0",
    "typescript": "^4.0.0",
    "webpack-chain": "^6.0.0"
  }
}
